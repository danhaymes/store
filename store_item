# p " A #{item1[:size]} sized #{item1[:brand]} #{item1[:name]} sells for $#{item1[:price]}"


class Item 
  def initialize(input_name, input_brand, input_price, input_size)
    @name = input_name
    @brand = input_brand
    @price = input_price
    @size = input_size
  end

  def name
    @name
  end

  def brand
    @brand
  end

  def price
    @price
  end

  def size
    @size
  end

  def print_info
    "#{@brand} #{@name} sells for $#{@price}"
  end

end

item1 = Item.new("Peanut Butter", "Skippy", 3, "160z")
p item1
p item1.print_info